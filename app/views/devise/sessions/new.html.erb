<div class="body">

  <div class="login_main_image">
    <%= image_tag "s城壁（夕方）.jpg", class:'ninja_img'%>
  </div>

  <div class="login_form">
    <div class="ses_login">ログイン</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"form-text_email" %><br />
        <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"form-text" %><br />
        <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>